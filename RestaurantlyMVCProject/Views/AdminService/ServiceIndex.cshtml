@model List<RestaurantlyMVCProject.Entities.Service>
@{
    ViewBag.Title = "ServiceIndex";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Service List</a></li>
        </ol>
    </div>
</div>


<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Service List</h4>
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover verticle-middle">
                            <thead>
                                <tr>
                                    <th scope="col"><b>Service Id</b></th>
                                    <th scope="col">Service Title</th>
                                    <th scope="col">Service Description</th>
                                    <th scope="col">Operations</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td><b>@item.ServiceId</b></td>
                                        <td>@item.ServiceTitle</td>
                                        <td>@item.ServiceDescription</td>
                                        <td align="center">
                                            <a href="/AdminService/UpdateService/@item.ServiceId" class="btn btn-check gradient-1 col-6 d-flex justify-content-center"><i class="fa-solid fa-pen"></i></a>
                                            &nbsp;
                                            <a href="/AdminService/DeleteService/@item.ServiceId" class="btn btn-check gradient-2 col-6 d-flex justify-content-center"><i class="fa-solid fa-xmark"></i></a>
                                        </td>

                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <a href="/AdminService/AddNewService/" class="btn btn-success gradient" style="color:white">Add New Service<span class="btn-icon-right"><i class="fa-solid fa-plus"></i></span></a>
        </div>
    </div>
</div>



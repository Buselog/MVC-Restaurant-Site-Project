@model RestaurantlyMVCProject.Entities.Product
@{
    ViewBag.Title = "AddNewProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Add New Product</a></li>
        </ol>
    </div>
</div>


<div class="container-fluid">
    <div class="col-lg-12">

        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Add New Product</h4>
                <div class="basic-form">
                    <form method="post">

                        <div class="form-group">
                            <br />
                            <label>Product Name</label>
                            <br />
                            <input type="text" name="ProductName" class="form-control" placeholder="Product Name">
                            <br />
                            <label>Product Description</label>
                            <br />
                            <input type="text" name="ProductDescription" class="form-control" placeholder="Product Description">
                            <br />
                            <label>Product Price</label>
                            <br />
                            <input type="text" name="ProductPrice" class="form-control" placeholder="Product Price">
                            <br />
                            <label>Product Image Url</label>
                            <br />
                            <input type="text" name="ProductImageUrl" class="form-control" placeholder="ProductImageUrl">
                            <br />
                            <label>Product Category</label>
                            <br />
                            @Html.DropDownListFor(a=>a.CategoryId, (List<SelectListItem>)ViewBag.categories, new {@class="form-control"})
                            <br />
                        </div>

                        <button type="submit" class="btn btn-check gradient-1">
                            Add Product<span class="btn-icon-right"><i class="fa-solid fa-circle-chevron-down"></i></span>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



@{
    ViewBag.Title = "AddNewTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Add New Testimonial</a></li>
        </ol>
    </div>
</div>


<div class="container-fluid">
    <div class="col-lg-12">

        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Add New Testimonial</h4>
                <div class="basic-form">
                    <form method="post">

                        <div class="form-group">
                            <br />
                            <label>Testimonial Name</label>
                            <br />
                            <input type="text" name="TestimonialName" class="form-control">
                            <br />
                            <label>Testimonial Title</label>
                            <br />
                            <input type="text" name="TestimonialTitle" class="form-control">
                            <br />
                            <label>Testimonial Description</label>
                            <br />
                            <input type="text" name="TestimonialDescription" class="form-control">
                            <br />
                            <label>Testimonial Image Url</label>
                            <br />
                            <input type="text" name="TestimonialImageUrl" class="form-control">
                            <br />
                        </div>

                        <button type="submit" class="btn btn-check gradient-1">
                            Add Testimonial<span class="btn-icon-right"><i class="fa-solid fa-circle-chevron-down"></i></span>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



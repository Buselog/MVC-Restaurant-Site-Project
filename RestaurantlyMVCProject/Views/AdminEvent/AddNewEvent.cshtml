
@{
    ViewBag.Title = "AddNewEvent";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Add New Event</a></li>
        </ol>
    </div>
</div>


<div class="container-fluid">
    <div class="col-lg-12">

        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Add New Event</h4>
                <div class="basic-form">
                    <form method="post">

                        <div class="form-group">
                            <br />
                            <label>Event Title</label>
                            <br />
                            <input type="text" name="EventTitle" class="form-control">
                            <br />
                            <label>Price Range</label>
                            <br />
                            <input type="text" name="EventPriceRange" class="form-control">
                            <br />
                            <label>Description</label>
                            <br />
                            <input type="text" name="Description" class="form-control">
                            <br />
                            <label>Image Url</label>
                            <br />
                            <input type="text" name="EventImageUrl" class="form-control">
                        </div>

                        <button type="submit" class="btn btn-check gradient-1">
                            Add Event<span class="btn-icon-right"><i class="fa-solid fa-circle-chevron-down"></i></span>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



@model RestaurantlyMVCProject.Entities.Feature
@{
    ViewBag.Title = "UpdateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Update Feature</a></li>
        </ol>
    </div>
</div>


<div class="container-fluid">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Update Feature</h4>
                <div class="basic-form">
                    <form method="post">

                        <div class="form-group">
                            <br />
                            @Html.HiddenFor(a => a.FeatureId)

                            <label>Feature Title</label>
                            <br />
                            @Html.TextBoxFor(a => a.FeatureTitle, new { @class = "form-control" })
                            <br />
                            <label>Feature Subtitle</label>
                            <br />
                            @Html.TextBoxFor(a => a.FeatureSubtitle, new { @class = "form-control" })
                            <br />
                            <label>Feature Image Url</label>
                            <br />
                            @Html.TextBoxFor(a => a.FeatureImageUrl, new { @class = "form-control" })
                            <br />
                            <label>Feature Video Url</label>
                            <br />
                            @Html.TextBoxFor(a => a.FeatureVideoUrl, new { @class = "form-control" })
                            <br />
                        </div>

                        <button type="submit" class="btn btn-check gradient-1">
                            Save Changes<span class="btn-icon-right"><i class="fa-solid fa-pen"></i></span>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


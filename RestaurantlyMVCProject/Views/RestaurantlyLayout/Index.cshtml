
@{
    Layout = null;
}

<html>

<!-- ======= Head ======= -->
@Html.Partial("PartialHead", "RestaurantlyLayout")

<body>

    <!-- ======= Top Bar ======= -->

    @Html.Action("PartialTopBar", "RestaurantlyLayout")

    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top d-flex align-items-cente">

        <div class="container-fluid container-xl d-flex align-items-center justify-content-lg-between">

            <h1 class="logo me-auto me-lg-0"><a href="/RestaurantlyLayout/Index">Restaurantly</a></h1>

            <!-- ======= Navbar ======= -->
            @Html.Partial("PartialNavBar", "RestaurantlyLayout")

            <a href="#book-a-table" class="book-a-table-btn scrollto d-none d-lg-flex">Book a table</a>

        </div>
    </header>

    <!-- ======= Feature-Home Section ======= -->

    @Html.Action("PartialFeature", "RestaurantlyLayout")

    <main id="main">

        <!-- ======= About Section ======= -->

        @Html.Action("PartialAbout", "RestaurantlyLayout")

        <!-- ======= Why Us - Service Section ======= -->

        @Html.Action("PartialService", "RestaurantlyLayout")

        <!-- ======= Menu Section ======= -->

        @Html.Action("PartialMenu", "RestaurantlyLayout")


        <!-- ======= Specials Section ======= -->

        @Html.Action("PartialSpecial", "RestaurantlyLayout")

        <!-- ======= Events Section ======= -->
        @Html.Action("PartialEvent", "RestaurantlyLayout")


        <!-- ======= Book A Table Section ======= -->

        @if (ViewBag.Message != null)
        {
            <script>alert('@ViewBag.Message')</script>
        }

        @Html.Action("PartialBookTable", "RestaurantlyLayout")

        <!-- ======= Testimonials Section ======= -->

        @Html.Action("PartialTestimonial", "RestaurantlyLayout")

        <!-- ======= Gallery Section ======= -->
        @Html.Action("PartialGallery", "RestaurantlyLayout")

        <!-- ======= Chefs Section ======= -->

        @Html.Action("PartialChef", "RestaurantlyLayout")


        <!-- ======= Contact Section ======= -->
        <section id="contact" class="contact">
            <div class="container" data-aos="fade-up">

                <div class="section-title">
                    <h2>Contact</h2>
                    <p>Contact Us</p>
                </div>
            </div>

            <div data-aos="fade-up">
                <iframe style="border:0; width: 100%; height: 350px;" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d24038.98978234525!2d29.02638237394613!3d41.13728253680028!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cab562080cca7f%3A0xe5d9dca329d94f5e!2zVGFyYWJ5YSwgMzQ0NTcgU2FyxLF5ZXIvxLBzdGFuYnVs!5e0!3m2!1str!2str!4v1740119323002!5m2!1str!2str" frameborder="0" allowfullscreen></iframe>
            </div>


            <div class="container" data-aos="fade-up">

                <div class="row mt-5">

                    @Html.Action("PartialAddress", "RestaurantlyLayout")


                    @if (@ViewBag.Message != null)
                    {
                        <script> alert('@ViewBag.Message') </script>
                    }

                    @Html.Action("PartialContact", "RestaurantlyLayout")

                </div>

            </div>
        </section>

    </main>

    <!-- ======= Footer ======= -->
    @Html.Action("PartialFooter", "RestaurantlyLayout")

    <div id="preloader"></div>
    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>


    @Html.Partial("~/Views/RestaurantlyLayout/PartialScript.cshtml")

</body>

</html>
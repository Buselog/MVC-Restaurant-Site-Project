@model List<RestaurantlyMVCProject.Entities.Special>
@{
    ViewBag.Title = "SpecialIndex";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Special List</a></li>
        </ol>
    </div>
</div>
<!-- row -->

<div class="container-fluid">
    <div class="row">

        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Special List</h4>
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover verticle-middle">
                            <thead>
                                <tr>
                                    <th scope="col"><b>Special Id</b></th>
                                    <th scope="col">Special Name</th>
                                    <th scope="col">Short Description</th>
                                    <th scope="col">Full Description</th>
                                    <th scope="col" class="col-md-2">Special Image</th>
                                    <th scope="col" class="col-md-2">Operations</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td><b>@item.SpecialId</b></td>
                                        <td>@item.SpecialName</td>
                                        <td>@item.SpecialShortDescription</td>
                                        <td>@item.SpecialFullDescription</td>
                                        <td align="center">
                                            <img src="@item.SpecialImageUrl" alt="@item.SpecialName" class="img-thumbnail" style="width:120px" />
                                        </td>
                                        <td align="center" class="justify-content-center align-items-center">
                                            <a href="/AdminSpecial/UpdateSpecial/@item.SpecialId" class="btn btn-check gradient-1 col-4 d-flex justify-content-center"><i class="fa-solid fa-pen"></i></a>
                                            &nbsp;
                                            <a href="/AdminSpecial/DeleteSpecial/@item.SpecialId" class="btn btn-check gradient-2 col-4 d-flex justify-content-center"><i class="fa-solid fa-xmark"></i></a>
                                        </td>

                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <a href="/AdminSpecial/AddNewSpecial/" class="btn btn-success gradient" style="color:white">Add New Special<span class="btn-icon-right"><i class="fa-solid fa-plus"></i></span></a>
            <br /><br />
        </div>
    </div>
</div>



@model List<RestaurantlyMVCProject.Entities.Category>
@{
    ViewBag.Title = "CategoryIndex";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Category List</a></li>
        </ol>
    </div>
</div>
<!-- row -->

<div class="container-fluid">
    <div class="row">

        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Category List</h4>
                    <div class="table-responsive">
                        <table class="table table-bordered verticle-middle">
                            <thead>
                                <tr>
                                    <th scope="col"><b>Category Id</b></th>
                                    <th scope="col" class="col-lg-5">Category Name</th>
                                    <th scope="col">Operations</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td><b>@item.CategoryId</b></td>
                                        <td>@item.CategoryName</td>
                                        <td align="center">
                                            <a href="/AdminCategory/UpdateCategory/@item.CategoryId" class="btn btn-check gradient-1 col-3">Update<span class="btn-icon-right"><i class="fa-solid fa-pen"></i></span></a>
                                            &nbsp;
                                            <a href="/AdminCategory/DeleteCategory/@item.CategoryId"  class="btn btn-check gradient-2 col-3">Delete<span class="btn-icon-right"><i class="fa-solid fa-xmark"></i></span></a>
                                        </td>

                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
           
            <a href="/AdminCategory/AddNewCategory/" class="btn btn-success gradient" style="color:white">Add Category<span class="btn-icon-right"><i class="fa-solid fa-plus"></i></span></a>
        </div>
    </div>
</div>



@model List<RestaurantlyMVCProject.Entities.Service>


<div class="col-lg-6">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Last 3 Services Added to the Site</h4>
            <p class="text-muted">
                <code></code>
            </p>
            <div id="accordion-two" class="accordion">
                @foreach (var item in Model)
                        {
                            var uniqId = "collapse1-" + item.ServiceId;
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0 collapsed" data-toggle="collapse" data-target="#@uniqId" 
                                aria-expanded="false" aria-controls="@uniqId">
                                <i class="fa" aria-hidden="true"></i>@item.ServiceTitle
                            </h5>
                        </div>
                        <div id="@uniqId" class="collapse" data-parent="#accordion-two">
                            <div class="card-body">@item.ServiceDescription</div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


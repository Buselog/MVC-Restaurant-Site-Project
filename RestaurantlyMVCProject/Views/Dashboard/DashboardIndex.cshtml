
@{
    ViewBag.Title = "DashboardIndex";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid mt-3">

    <div class="row">
        <div class="col-lg-3 col-sm-6">
            <div class="card gradient-9">
                <div class="card-body">
                    <h3 class="card-title text-white">Our Product Count</h3>
                    <div class="d-inline-block">
                        <h2 class="text-white">@ViewBag.ProductCount</h2>
                        <p class="text-white mb-0">Last Product: <b><i>@ViewBag.LastProductName</i></b></p>
                    </div>
                    <span class="float-right display-5 opacity-5"><i class="fa-solid fa-utensils"></i></span>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-sm-6">
            <div class="card gradient-2">
                <div class="card-body">
                    <h3 class="card-title text-white">Category Count</h3>
                    <div class="d-inline-block">
                        <h2 class="text-white">@ViewBag.CategoryCount</h2>
                        <p class="text-white mb-0">Last Added Category: <b><i>@ViewBag.LastCategoryName</i></b></p>
                    </div>
                    <span class="float-right display-5 opacity-5"><i class="fa-solid fa-list"></i></span>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-sm-6">
            <div class="card gradient-8">
                <div class="card-body">
                    <h3 class="card-title text-white">Special Count</h3>
                    <div class="d-inline-block">
                        <h2 class="text-white">@ViewBag.SpecialCount</h2>
                        <p class="text-white mb-0">Last Added Special: <b><i>@ViewBag.LastSpecialName</i></b></p>
                    </div>
                    <span class="float-right display-5 opacity-5"><i class="fa-solid fa-wine-glass"></i></span>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-sm-6">
            <div class="card gradient-6">
                <div class="card-body">
                    <h3 class="card-title text-white">Reservation Count</h3>
                    <div class="d-inline-block">
                        <h2 class="text-white">@ViewBag.ReservationCount</h2>
                        @*<p class="text-white mb-0"></p>*@
                    </div>
                    <span class="float-right display-5 opacity-5"><i class="fa-solid fa-users" style="color:whitesmoke"></i></span>
                </div>
            </div>
        </div>
    </div>



    @Html.Action("StatisticFoodPartial", "Dashboard")


    @Html.Action("MostExpensiveFoodPartial", "Dashboard")


    <div class="row">
        @Html.Action("LastSavedServicesPartial", "Dashboard")

        @Html.Action("LastSavedEventsPartial", "Dashboard")
    </div>


    @Html.Action("ReservationTablePartial", "Dashboard")



</div>











@model List<RestaurantlyMVCProject.Entities.Address>
@{
    ViewBag.Title = "AddressIndex";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@{ 
    int addressId = 0;
}

<div class="row page-titles mx-0">
    <div class="col p-md-0">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Address Page</a></li>
        </ol>
    </div>
</div>


<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Address Table</h4>
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover verticle-middle">

                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th scope="col"><b>Address Id</b></th>
                                        <td>@item.AddressId</td>
                                    </tr>
                                    <tr>
                                        <th scope="col">Location</th>
                                        <td>@item.AddressLocation</td>
                                    </tr>
                                    <tr>
                                        <th scope="col">Open Hours</th>
                                        <td>@item.AddressOpenHours</td>
                                    </tr>
                                    <tr>
                                        <th scope="col">Email</th>
                                        <td>@item.AddressEmail</td>
                                    </tr>
                                    <tr>
                                        <th scope="col">Call</th>
                                        <td>@item.AddressCall</td>
                                    </tr>

                                    addressId = item.AddressId;
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <a href="/AdminAddress/UpdateAddress/@addressId" class="btn btn-check gradient-1">Update Information<span class="btn-icon-right"><i class="fa-solid fa-circle-chevron-down"></i></span></a>
        </div>
    </div>
</div>

